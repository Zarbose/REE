#!/bin/bash

# SEUIL_WIFI_SIGNAL=153
SEUIL_WIFI_SIGNAL=-55

while true; 
do  
    
    declare -a tableau
    for ((i=0; i<10; i++)); do
        # SIGNAL=$(sudo batctl meshif bat0 o | grep -v "*" | tr -d "*()" | tail -n +3 | awk  '{print $3}' | sort -n -r | head -n 1)
        SIGNAL=$(sudo iw dev wlan0 scan ssid call-code-mesh | grep "signal" | awk '{print $2}')
        tableau+=($(echo $SIGNAL))
        sleep 0.3
    done
    somme=0
    for valeur in "${tableau[@]}"; do
        somme=$((somme + valeur))
    done
    moyenne=$((somme / ${#tableau[@]}))

    echo $moyenne

    if [ $moyenne -gt $SEUIL_WIFI_SIGNAL ]
    then
        echo "Signal Wi-Fi trop faible. DÃ©clenchement de l'alarme..."
        espeak "Stop"
        sleep 0.3
        espeak "Stop"
        sleep 0.3
        espeak "Stop"

        exit 0
    fi
    unset tableau
done

